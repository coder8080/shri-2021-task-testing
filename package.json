{
    "name": "autotests-hw-with-auto-check",
    "version": "1.0.0",
    "scripts": {
        "start": "nodemon ./src/server/index.ts",
        "test": "npm run test-unit && npm run build > unified.log && concurrently \"npm run start --quiet\"  \"npm run test-hermione\"",
        "build": "webpack --mode=production --node-env=production",
        "hermione-gui": "hermione gui ./test/hermione",
        "test-hermione": "selenium-standalone install > unified.log && hermione",
        "test-unit": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
        "watch": "webpack --watch",
        "postinstall": "npm link hermione-selenium-standalone-runner"
    },
    "dependencies": {
        "@babel/core": "^7.19.6",
        "@babel/plugin-syntax-jsx": "^7.18.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-react": "^7.18.6",
        "@bem-react/classname": "^1.5.12",
        "@jest/globals": "^29.2.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "12.0",
        "@testing-library/user-event": "^14.4.3",
        "axios": "^0.23.0",
        "bootstrap": "^5.1.3",
        "chai": "^4.3.4",
        "delay": "^5.0.0",
        "express": "^4.17.1",
        "faker": "^5.5.3",
        "immer": "^9.0.6",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-redux": "^7.2.5",
        "react-router": "^5.2.1",
        "react-router-dom": "^5.3.0",
        "redux": "^4.1.1",
        "redux-observable": "^2.0.0",
        "rxjs": "^7.4.0",
        "selenium-standalone": "^8.2.2",
        "ts-jest": "27.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.9",
        "@types/mini-css-extract-plugin": "^2.3.0",
        "@types/node": "^16.11.1",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "@types/react-helmet": "^6.1.4",
        "@types/react-router": "^5.1.17",
        "@types/react-router-dom": "^5.3.1",
        "@types/webpack": "^5.28.0",
        "concurrently": "^7.5.0",
        "css-loader": "^6.3.0",
        "html-reporter": "^9.3.1",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^27.3.0",
        "mini-css-extract-plugin": "^2.4.2",
        "nodemon": "^2.0.13",
        "sass": "^1.42.1",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.3.0",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4",
        "webpack": "^5.58.2",
        "webpack-cli": "^4.9.0"
    },
    "jest": {
        "preset": "ts-jest",
        "extensionsToTreatAsEsm": [
            ".jsx"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.jsx$": "babel-jest"
        },
        "testEnvironment": "jsdom",
        "testURL": "http://127.0.0.1:3000/hw/store"
    }
}
